{
  "info": {
    "name": "Morgan Legal Tender API",
    "description": "API endpoints for testing the Morgan Legal Tender backend with Gemini",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Gemini Conversations",
      "item": [
        {
          "name": "Start Conversation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"system_instruction\": \"You are a helpful legal assistant specializing in personal injury law.\",\n  \"initial_message\": \"What are the key elements to prove negligence in a car accident case?\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/conversation/start",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "conversation", "start"]
            }
          }
        },
        {
          "name": "Continue Conversation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"conversation_id\": \"conv-REPLACE_WITH_ID\",\n  \"message\": \"Can you give me a specific example?\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/conversation/continue",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "conversation", "continue"]
            }
          }
        },
        {
          "name": "Get Conversation History",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8000/api/conversation/:conversation_id/history",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "conversation", ":conversation_id", "history"],
              "variable": [
                {
                  "key": "conversation_id",
                  "value": "conv-REPLACE_WITH_ID"
                }
              ]
            }
          }
        },
        {
          "name": "List Active Conversations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8000/api/conversations/active",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "conversations", "active"]
            }
          }
        }
      ]
    },
