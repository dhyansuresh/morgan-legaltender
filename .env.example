# Environment Configuration for Tender for Lawyers

# ========================================
# Application Settings
# ========================================
ENVIRONMENT=development
PORT=8000
HOST=0.0.0.0

# ========================================
# AI Model Configuration
# ========================================
# Primary AI model for processing
PRIMARY_AI_MODEL=claude-sonnet-4-5-20250929

# Fallback model if primary fails
FALLBACK_AI_MODEL=gemini-2.0-flash-exp

# OpenAI API Key (if using OpenAI models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (if using Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI API Key (if using Gemini models)
GOOGLE_AI_API_KEY=your-google-ai-key-here

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# ========================================
# Database Configuration
# ========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/tender_db

# SQLAlchemy pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ========================================
# Redis Configuration (for caching)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========================================
# Celery Configuration (for background tasks)
# ========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ========================================
# Security Settings
# ========================================
# Secret key for session management
SECRET_KEY=your-secret-key-here-change-in-production

# JWT settings (if using authentication)
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ========================================
# Salesforce Integration (optional)
# ========================================
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=
SALESFORCE_SECURITY_TOKEN=
SALESFORCE_DOMAIN=login

# ========================================
# Email Configuration (for notifications)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourlawfirm.com

# ========================================
# Email Inbox Monitoring (IMAP)
# ========================================
# IMAP server for monitoring email inbox
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here

# ========================================
# Twilio SMS Configuration
# ========================================
# Twilio account credentials for SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========================================
# Feature Flags
# ========================================
ENABLE_PII_REDACTION=true
ENABLE_AUTO_APPROVAL=false
ENABLE_SALESFORCE_SYNC=false
ENABLE_EMAIL_NOTIFICATIONS=true

# ========================================
# Document Processing
# ========================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=50

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt,eml,msg

# ========================================
# AI Processing Settings
# ========================================
# Maximum tokens for LLM requests
MAX_LLM_TOKENS=4000

# Temperature for AI responses (0.0 - 1.0)
AI_TEMPERATURE=0.3

# Enable caching of AI responses
ENABLE_AI_CACHE=true
AI_CACHE_TTL_SECONDS=3600

# ========================================
# Development Settings
# ========================================
# Enable debug mode (never use in production!)
DEBUG=false

# Enable auto-reload on code changes
AUTO_RELOAD=true

# Mock external services in development
MOCK_EXTERNAL_SERVICES=false
